
<a href="/perfil"><button class="voltar">Perfil</button></a>

<div class="slide-container swiper">
        <div class="slide-content">
            <div class="card-wrapper swiper-wrapper">
                {{#each feed}}
                <div class="card swiper-slide">
                    <div class="image-content">
                        <span class="overlay"></span>

                        <div class="card-image">
                            {{#if foto}}
                            <img src="imagens/uploaded/{{matricula}}{{foto}}" alt="{{nome}}" class="card-image">
                            {{else}}
                            <img src="imagens/pessoa.png" alt="{{nome}}" class="card-image">
                            {{/if}}
                        </div>
                    </div>

                    <div class="card-content">
                        <h2 class="name">{{nome}}</h2>
                        <p class="description">{{curso}}</p>

                        <a href="/usuario/{{matricula}}" class="perfil-button">Ver perfil</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>

    </div>

    <script src="js/swiper-bundle.min.js"> </script>

    <script src="js/feed.js">   </script>
